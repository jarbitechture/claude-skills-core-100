# Filtered View Template (Tag + Folder)
# Combine multiple filter types for precise note selection

version: v0.1

filter:
  # Change tag to match your needs
  # Example: '#reference' or '#active'
  tag: '#your-tag'

  # Change folder path to your target folder
  # Example: 'Projects/Active' or 'Areas/Work'
  # Use empty string '' to disable folder filter
  folder: 'your-folder-path'

  # MULTIPLE FILTER EXAMPLES:
  # Tag only: Remove the 'folder:' line above
  # Folder only: Remove the 'tag:' line above
  # Both: Keep both lines (AND logic - must match both)

views:
  - type: table
    # Basic fields - customize as needed
    order:
      - file.name      # File name
      - file.folder    # Shows which folder the note is in
      - tags           # Shows all tags

    # Optional: add date tracking
    # - file.ctime   # Created date
    # - file.mtime   # Modified date

    # Optional: add custom frontmatter fields
    # - status
    # - priority
    # - category

# FILTER COMBINATION EXAMPLES:
# 1. Only notes tagged #project AND in 'Work' folder:
#    tag: '#project'
#    folder: 'Work'
#
# 2. Only notes in 'Archive' folder (no tag filter):
#    folder: 'Archive'
#    # (remove tag line)
#
# 3. Only notes tagged #reference (any folder):
#    tag: '#reference'
#    # (remove folder line)
#
# 4. Nested folder example:
#    folder: 'Projects/2024/Active'
#
# CUSTOMIZATION TIPS:
# - Use forward slashes (/) for nested folders
# - Folder paths are relative to vault root
# - Tags need the # prefix
# - Add more views by duplicating the '- type: table' block
